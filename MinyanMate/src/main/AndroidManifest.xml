<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="org.minyanmate.minyanmate"
    android:versionCode="9"
    android:versionName="0.8.7" >

    <uses-sdk
        android:minSdkVersion="14"
        android:targetSdkVersion="18" />
    
    <uses-permission android:name="android.permission.READ_CONTACTS" />
    <uses-permission android:name="android.permission.RECEIVE_SMS" />
    <uses-permission android:name="android.permission.READ_SMS" />
    <uses-permission android:name="android.permission.SEND_SMS" />
    <uses-permission android:name="android.permission.WAKE_LOCK" />
    <uses-permission android:name="android.permission.RECEIVE_BOOT_COMPLETED" />

    <uses-feature android:name="android.hardware.telephony" android:required="true" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="org.minyanmate.minyanmate.MinyanMateActivity"
            android:label="@string/app_name" 
            android:launchMode="singleTop" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".MinyanScheduleSettingsActivity"
            android:label="@string/title_edit_minyans"
            android:parentActivityName="org.minyanmate.minyanmate.MinyanMateActivity"
            >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="org.minyanmate.minyanmate.MinyanMateActivity" />
        </activity>

        <activity android:name=".UserParticipationPopupActivity"
            android:label="@string/app_name"
            android:theme="@style/Theme.Transparent"
            android:launchMode="singleInstance"
            android:noHistory="true"
            android:excludeFromRecents="true">
        </activity>

	    <provider
	        android:authorities="org.minyanmate.minyanmate.contentprovider"
	        android:name=".contentprovider.MinyanMateContentProvider"
	        android:exported="false" >
	    </provider>
	    
	    <receiver android:name="org.minyanmate.minyanmate.services.OnBootReceiver" >
            <intent-filter>
                <action android:name="android.intent.action.BOOT_COMPLETED" />
                <action android:name="android.intent.action.ACTION_MY_PACKAGE_REPLACED" />
            </intent-filter>
        </receiver>
        
	    <receiver android:name="org.minyanmate.minyanmate.services.OnMinyanAlarmReceiver">
	    </receiver>
	    
	    <service android:name="org.minyanmate.minyanmate.services.SendInvitesService" />
        
	    <receiver android:name="org.minyanmate.minyanmate.services.OnSmsReceiver" >
            <intent-filter>
                <action android:name="android.provider.Telephony.SMS_RECEIVED" />
            </intent-filter>
        </receiver>
    </application>
    


</manifest>
